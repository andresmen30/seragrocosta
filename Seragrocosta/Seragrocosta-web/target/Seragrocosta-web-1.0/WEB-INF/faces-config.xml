<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <resource-bundle>
            <base-name>properties.general</base-name>
            <var>general</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>properties.config</base-name>
            <var>config</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>properties.admin-config</base-name>
            <var>adm</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>properties.menu</base-name>
            <var>menu</var>
        </resource-bundle>
    </application>
    <lifecycle>
        <phase-listener>com.ocpsoft.pretty.faces.event.MultiPageMessagesSupport</phase-listener>
    </lifecycle>
    
    <factory>
        <exception-handler-factory>com.seragrocosta.web.exception.CustomExceptionHandlerFactory</exception-handler-factory>
    </factory>

</faces-config>
